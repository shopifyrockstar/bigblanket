.slick-left-arrow, .slick-right-arrow {
  position: absolute;
  top: 33%;
  z-index: 3;
  width: 34px;
  height: 34px;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  background: #fff;
  cursor: pointer;
}

.slick-left-arrow svg, .slick-right-arrow svg {
  width: 13px;
  height: 13px;
  fill: #000;
}

.slick-left-arrow {
  left: 15px;
}

.slick-right-arrow {
  right: 15px;
}

@media screen and (min-width: 385px) {
  .collection-list__item-status.tabbed-status-item .status-item, .status-item.tabbed-item {
    position: absolute;
    top: 0;
    right: 20px;
    padding: 10px;
    background: #f7c945;
    border-radius: 0px 0px 10px 10px;
  }
}

/* Countdown timer styles */
#announcement_bar_countdown {
  margin-top: 3px;
  padding-bottom:10px;
  
  .cd-bit {
    background: white;
    padding: 3px 9px;
    margin-left: 2px;
    border-radius: 2px;
    width: 23px;
    font-size: 14px;
  }
  
  .cd-colon {
    font-size: 15px;
    width: 10px;
    display: inline-block;
    text-align: center;
    margin-left: 2px;
  }
}

