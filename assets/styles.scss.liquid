.go-cart__overlay, .go-cart__drawer {
  overflow: hidden !important;
  height: 100%;
}

.go-cart__drawer {
  z-index: 999;
}

.go-cart__overlay {
  z-index: 800;
  -webkit-overflow-scrolling: touch;
}

.go-cart-drawer__content {
  min-height: auto;
}

.go-cart-drawer__footer {
  overflow-y: initial;
}

.cart-upsell__btn {
  top: 63px;
}

.go-cart__scroll {
  height: auto;
}

.cart-upsell__imgs {
  display: flex;
  align-items: center;
}

@media screen and (max-width: 484px) {
  .cart-upsell__btn {
    top: 52px;
  }

  .cart-upsell__variants-box {
    margin-top: 5px;
  }

  .cart-upsell__form {
    padding-bottom: 10px;
  }

  .cart-upsell__product {
    padding-bottom: 2px;
  }

  .variants-price {
    bottom: 13px;
  }
}
@media screen and (max-width: 388px) {
  .form__header {
    font-size: 12px;
  }

  .cart-upsell__variant-grid-item {
    width: 17px;
    height: 17px;
    margin: 3px;
    margin-top: 5px;
  }
  .cart-upsell__btn {
    top: 70px;
  }
}


.collection-list__item-status .status-item {
  letter-spacing: 0.4px;
}

.collection-list__box .collection-list__item .collection-list__item-action .btn {
  font-size: 13px;
}

.product-title-wrapper.mobile-only, .collection-list__item-status.mobile-only {
  display: none;
}

@media screen and (max-width: 576px) {
  .product-title-wrapper .product-single__title.hide-on-mobile, 
  .product-title-wrapper .second-header.hide-on-mobile,
  .collection-list__item-status.hide-on-mobile,
  .hide-on-mobile{
    display: none !important;
  }
  
  .product-title-wrapper.mobile-only,
  .collection-list__item-status.mobile-only {
    display: block;
  }
}

