<div class="contact-wrapper">
  {% if section.settings.header_text != blank %}
  	<p>{{ section.settings.header_text }}</p>
  {% endif %}
  <div class="text-wrapper">
    <div class="text-item-wrapper">
      <p>{{ section.settings.email_title }}</p>
      <a class="email-link" href="mailto:{{ section.settings.email_content }}">{{ section.settings.email_content }}</a>
      <p>{{ section.settings.email_under_content }}</p>      
    </div>
    <div class="text-item-wrapper">
      <p>{{ section.settings.text_title }}</p>
      <p>{{ section.settings.text_content }}</p>
      <p>{{ section.settings.text_under_content }}</p>      
    </div>
    <div class="text-item-wrapper">
      <p>{{ section.settings.call_title }}</p>
      <p><a href="tel:{{ section.settings.call_content }}">{{ section.settings.call_content }}</a></p>
      <p>{{ section.settings.call_under_content }}</p>      
    </div>
    <div class="text-item-wrapper">
      <p>{{ section.settings.write_title }}</p>
      <p>{{ section.settings.write_under_title }}</p>
      {{ section.settings.write_content }}      
    </div>
  </div>
  
  <div class="button-wrapper">
    {% for block in section.blocks %}
      <div class="button-item-wrapper"> 
        <img src="{{ block.settings.img | img_url: '120x' }}">       
        <a href="{{ block.settings.target_url }}">
          {{ block.settings.text }}
        </a>
      </div>
    {% endfor %}
  </div>
</div>


{% schema %}
{
"name": "Contact Info",
"settings": [
    {
      "id": "header_text",
      "type": "text",
      "label": "Header Text"
    },
	{
      "id": "email_title",
      "type": "text",
      "label": "Email title"
    },
	{
      "id": "email_content",
      "type": "text",
      "label": "Email address"
    },
    {
      "id": "email_under_content",
      "type": "text",
      "label": "Email Bottom Text"
    },
	{
      "id": "text_title",
      "type": "text",
      "label": "Text title"
    },
	{
      "id": "text_content",
      "type": "text",
      "label": "Text content"
    },
    {
      "id": "text_under_content",
      "type": "text",
      "label": "Text Bottom content"
    },
	{
      "id": "call_title",
      "type": "text",
      "label": "Call title"
    },
	{
      "id": "call_content",
      "type": "text",
      "label": "Call content"
    },
    {
      "id": "call_under_content",
      "type": "text",
      "label": "Call Under content"
    },
	{
      "id": "write_title",
      "type": "text",
      "label": "Write title"
    },
	{
      "id": "write_content",
      "type": "textarea",
	  "default": "<p></p>",
      "label": "Write content"
    },
    {
      "id": "write_under_title",
      "type": "text",
      "label": "Write Bottom title"
    }
  ],
  "blocks" : [
      {
        "type": "button",
        "name": "CTA button",
        "settings": [
          {
            "type": "image_picker",
            "id": "img",
            "label": "Image"
          }, 
          {
            "type": "richtext",
            "id": "text",
            "label": "Text",
            "default": "<p><strong>Make an announcement</strong> | More info</p>"
          },
          {
            "id": "target_url",
            "type": "url",
            "label": "Targeted page"
          }
        ]
      }
    ]
}
{% endschema %}