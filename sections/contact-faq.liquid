<div class="faq-wrapper">
  <h3>{{ section.settings.header_text }}</h3> 
  <div class="faq-item-wrapper">
    {% for block in section.blocks %}
      <div class="so-tab">
        <input id="so-tab-{{ forloop.index }}" type="checkbox" name="tabs"> 
        <label for="so-tab-{{ forloop.index }}">
          <strong>{{ block.settings.faq_header }}</strong><br>
        </label>
        <div class="so-tab-content">  
          {{ block.settings.faq_body }}
        </div>
      </div>    
    {% endfor %}
    <a href="{{ section.settings.target_url }}">
      {{ section.settings.button_text }}
    </a>
  </div>
</div>



{% schema %}
{
"name": "Contact FAQ",
"settings": [
    {
      "id": "header_text",
      "type": "text",
      "label": "Header Text"
    },
	{
      "id": "button_text",
      "type": "text",
      "label": "Button Text"
    },
    {
      "id": "target_url",
      "type": "url",
      "label": "Button link"
    }
  ],
  "blocks" : [
      {
        "type": "faq",
        "name": "faq content",
        "settings": [
		  {
            "id": "faq_header",
            "type": "text",
            "label": "Question"
          },
          {
            "type": "textarea",
            "id": "faq_body",
            "label": "Answer",
            "default": "<p><strong>Make an announcement</strong> | More info</p>"
          }
        ]
      }
    ]
}
{% endschema %}
